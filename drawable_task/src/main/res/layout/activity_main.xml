<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_launcher"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_board" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/game_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/game_indicator_opponents" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="390dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_1"
                android:layout_width="120dp"
                android:layout_height="125dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_2"
                android:layout_width="140dp"
                android:layout_height="125dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_3"
                android:layout_width="120dp"
                android:layout_height="125dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_4"
                android:layout_width="120dp"
                android:layout_height="140dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_5"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_6"
                android:layout_width="120dp"
                android:layout_height="140dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_7"
                android:layout_width="120dp"
                android:layout_height="125dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_8"
                android:layout_width="140dp"
                android:layout_height="125dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/quadrant_9"
                android:layout_width="120dp"
                android:layout_height="125dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>